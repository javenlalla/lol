        <script src="js/app/views/ImageView.js"></script>
        <script src="js/app/views/ImagesView.js"></script>
        <script src="js/main.js"></script>
        
        <script type="text/html" id="imageView">
            
            <img src ="i/{{compressed_filename}}" alt="{{name}}" class="image-item">
            
            {{!<button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bs-example-modal-sm">Small modal</button>}}

            <div id="modal-{{id}}" class="modal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
                <div class="modal-dialog">
                    <div class="modal-content center-block text-center">
                        <h1>{{name}}</h1>
                        {{#hasTags}}
                            <div class="tags">
                                {{#tags}}
                                    <span class="bg-info">{{.}}</span>
                                {{/tags}}
                            </div>
                        {{/hasTags}}
                        <div class="image-actions">
                            <button class="edit btn btn-primary">Edit</button>
                            <button class="delete btn btn-danger">Delete</button>
                        </div>
                        
                        <div class="image-edit hidden">
                            <input type="text" value="{{name}}" class="updateName" />
                            <input type="text" value="{{tagsString}}" class="updateTags" placeholder="tag1, tag2, tag3, etc.." />
                            <input type="checkbox" class="updateNsfw" {{#nsfw}} checked {{/nsfw}}> NSFW
                
                            <button class="save">Save</button>
                        </div>
                        
                        <img id="modal-image-{{id}}" alt="{{name}}" class="image-item-modal">
                    </div>
                </div>
            </div>
        </script>
        
        <script type="text/html" id="imagesView">
            <div class="row">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" id="enableNsfw"> Enable NSFW Images
                    </label>
                </div>
            </div>
            
            <div class="row">
                <div class="center-block text-center">
                    <form>
                        <div class="form-group">
                            <input type="text" id="newImageUrl" placeholder="Image Url" />
                        </div>
                        <div class="form-group">
                            <input type="text" id="newImage" placeholder="Name" />
                        </div>
                        <div class="form-group">
                            <input type="text" id="newImageTags" placeholder="tag1, tag2, tag3, etc..."/>
                        </div>
                        
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" id="newImageNsfw"> NSFW
                            </label>
                        </div>
                        
                        <button id="addNewImage" class="btn btn-default">Add</button>
                    </form>
                </div>
                    
                <div id="images"></div>
            </div>
        </script>
        
        <script type="text/html" id="editImageView">
            <input type="text" value="{{name}}" class="updateName" />
            <input type="text" value="{{tagsString}}" class="updateTags" placeholder="tag1, tag2, tag3, etc.." />
            <input type="checkbox" class="updateNsfw" {{#nsfw}} checked {{/nsfw}}> NSFW

            <button id="save">Save</button>
        </script>

    </body>
</html>
